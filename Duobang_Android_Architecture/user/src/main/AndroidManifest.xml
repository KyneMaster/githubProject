<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duobang.user">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>

        <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
        <!-- 适配华为(hua wei)刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!-- 适配小米(xiao mi)刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/DuobangTheme"
            android:launchMode="singleTask"/>
        <activity
            android:name=".member.MemberActivity"
            android:theme="@style/DuobangTheme" />
        <activity
            android:name=".register.RegisterActivity"
            android:theme="@style/DuobangTheme" />
        <activity
            android:name=".password.GetBackPwdActivity"
            android:theme="@style/DuobangTheme" />
        <activity
            android:name=".login.SSCodeActivity"
            android:theme="@style/DuobangTheme" />
        <activity
            android:name=".login.SSCodeHelperActivity"
            android:theme="@style/DuobangTheme" />
        <activity
            android:name=".login.LoginContractActivity"
            android:theme="@style/DuobangTheme" />
        <activity android:name=".personal.PersonalActivity" />
        <activity
            android:name=".invitationCode.InvitationCodeActivity"
            android:theme="@style/DuobangTheme" />
        <activity android:name=".personal.imp.UserNameActivity" />
        <activity android:name=".contacts.imp.OrgStructureActivity" />
        <activity android:name=".contacts.imp.GroupUserActivity"/>
        <activity android:name=".switchOrg.SwitchOrgActivity"/>
    </application>

</manifest>